{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "exclude": [
    "./dist/*",
    "./node_modules/*",
    "./tests/*"
  ], 
  "include": ["./src"]
}