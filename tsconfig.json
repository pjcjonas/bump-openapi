{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    /* Strict Type-Checking Options */
    "strict": true,
    /* Additional Checks */
    /* Module Resolution Options */
    "esModuleInterop": true,
    /* Source Map Options */
    /* Experimental Options */
    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "exclude": [
    "./dist/*",
    "./node_modules/*",
    "./tests/*"
  ], 
  "include": ["./src"]
}